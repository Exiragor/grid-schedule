{
    "compilerOptions": {
        "outDir": "./dist/",
        "noImplicitAny": false,
        "module": "es6",
        "target": "es5",
        "allowJs": true,
        "lib": [ "dom", "es2019" ],
        "sourceMap": true,
        "moduleResolution": "node",
        "baseUrl": "./",
        "paths": {
            "@app/*": ["./src/app/*"],
            "@components/*": ["./src/app/components/*"],
            "@assets/*": ["./src/assets/*"],
            "@mocks/*": ["./src/mocks/*"],
            "@src/*": ["./src/*"]
        }
    },
    "include": [
        "./src/**/*"
    ]
}
