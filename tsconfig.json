{
    "compilerOptions": {
        "outDir": "./dist/",
        "noImplicitAny": false,
        "module": "es6",
        "target": "es5",
        "allowJs": true,
        "lib": [ "dom", "es7" ],
        "sourceMap": true,
        "moduleResolution": "node",
        "baseUrl": ".",
        "paths": {
            "App": ["src/app/"],
            "Components": ["src/app/components/"],
            "Assets": ["src/assets/"],
            "Mocks": ["src/mocks/"],
            "Src": ["src/"]
        }
    },
    "include": [
        "./src/**/*"
    ]
}
